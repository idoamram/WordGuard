<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word_recycler_item_title"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="This is the Title"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/word_recycler_item_deadline"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorSecondary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="09:00"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/word_recycler_item_contact_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/word_recycler_item_contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_person" />

            <TextView
                android:id="@+id/word_recycler_item_contact_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?android:textColorSecondary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Israel Israeli"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/word_recycler_item_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_location" />

            <TextView
                android:id="@+id/word_recycler_item_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?android:textColorSecondary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Holot Geulim 9, Zoran"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
</LinearLayout>
