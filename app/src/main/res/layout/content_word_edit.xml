<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.WordEditActivity"
    tools:showIn="@layout/activity_word_edit">

    <LinearLayout
        android:id="@+id/activity_word_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.io.wordguard.ui.activities.WordEditActivity">

        <!--*****************Type*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_type_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_group" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_type_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <Spinner
                    android:id="@+id/word_edit_type_spinner"
                    style="@style/AddWordSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flat_spinner_bg"
                    android:popupBackground="@drawable/dialog_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Title*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_title_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_title_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/word_title"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Description*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_description_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_description_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/word_description"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Deadline*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_deadline_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_deadline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_calendar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_deadline_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/flat_spinner_bg"
                    android:focusable="false"
                    android:foreground="?selectableItemBackground"
                    android:hint="@string/deadline"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary"
                    android:textColorHint="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Location*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_location_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_location_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/location"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:id="@+id/word_edit_location_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorSecondary"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Contact Name*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_contact_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_contact_name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_contact_name_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_contact_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/contact_name"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Contact Number*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_contact_number_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_contact_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_dialpad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_contact_number_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_contact_number_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/contact_phone_number"
                    android:inputType="number"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!--*****************Contact Email*****************-->
        <RelativeLayout
            android:id="@+id/word_edit_contact_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/word_edit_contact_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/word_edit_contact_email_icon"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/word_edit_contact_email_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/contact_email"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

